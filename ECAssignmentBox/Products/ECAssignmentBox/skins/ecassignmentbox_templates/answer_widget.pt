<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xml:lang="en" lang="en"
      i18n:domain="eduComponents">

  <body>

    <metal:define define-macro="search">
      <metal:use use-macro="here/widgets/field/macros/edit" />
    </metal:define>

    <metal:define define-macro="edit">
      <metal:use use-macro="here/widgets/file/macros/edit" />
    </metal:define>


    <metal:define define-macro="view">
      <metal:use use-macro="here/answer_widget/macros/content" />
      <metal:use use-macro="here/widgets/file/macros/view" />
    </metal:define>

    <metal:define define-macro="content">
		<div tal:define="file accessor"
			tal:condition="python: file.getId() == 'text'">
			<pre tal:define="mime_type file/get_content_type | file/Format;
				cnt file/get_data_text;"
				tal:condition="cnt"
				tal:content="cnt">
			</pre>
		</div>		
		<div tal:define="file accessor"
			tal:condition="python: file.getId() == 'file'">
			<pre tal:define="mime_type file/get_content_type | file/Format;
				cnt file/get_data;"
				tal:condition="cnt"
				tal:content="cnt">
			</pre>
		</div>
    </metal:define>

  </body>
</html>
